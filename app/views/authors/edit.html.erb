<h1>Edit Author</h1>

<%= form_with model: @author, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @author.name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, value: @author.email %>
  </div>

  <div>
    <%= form.submit "Update Author", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Authors", authors_path, class: "btn btn-secondary" %>
